<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookMyHotel</title>
</head>
<body>

<script src="https://code.tidio.co/pqitxdgkegfpjprtnraqfbwguom08sob.js" async></script>

<script>
window.addEventListener('load', function() {
    Object.keys(localStorage).forEach(k => k.includes('tidio') && localStorage.removeItem(k));
    setTimeout(() => {
        const s = document.createElement('style');
        s.innerHTML = `
            #tidio-chat-code { transform: scale(1.6) !important; transform-origin: bottom right !important; }
            #tidio-chat iframe { width: 550px !important; height: 800px !important; border-radius: 20px !important; }
            @media (max-width: 768px) { #tidio-chat iframe { width: 95vw !important; height: 90vh !important; }}
        `;
        document.head.appendChild(s);
        if (typeof tidioChatApi !== 'undefined') {
            tidioChatApi.setColorPalette('#1e3c72');
            tidioChatApi.setVisitorData({ distinct_id: 'v_' + Date.now() });
        }
    }, 2000);
});
</script>

</body>
</html>